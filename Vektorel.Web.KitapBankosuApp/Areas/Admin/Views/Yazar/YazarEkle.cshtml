
@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Yazar Ekleme İşlemi</h2>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yazar Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form role="form" action="/Admin/Yazar/YazarEkle" method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Adı</label>
                <input type="text" class="form-control" name="YazarAd">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Soyadı</label>
                <input type="text" class="form-control" name="YazarSoyad">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Doğum Tarihi</label>
                <input type="date" class="form-control" name="DogumTarih">
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
